{{! Initialize footer functionality }}
{{#js}}
require(['jquery'], function($) {
    'use strict';
    
    // Back to top functionality
    const backToTopBtn = $('#back-to-top-btn');
    
    $(window).scroll(function() {
        if ($(this).scrollTop() > 300) {
            backToTopBtn.fadeIn();
        } else {
            backToTopBtn.fadeOut();
        }
    });
    
    backToTopBtn.click(function() {
        $('html, body').animate({
            scrollTop: 0
        }, 600);
        return false;
    });
    
    // Dark mode toggle functionality
    $('[data-action="toggle-darkmode"]').click(function(e) {
        e.preventDefault();
        
        const body = $('body');
        const isDark = body.hasClass('theme-dark');
        
        if (isDark) {
            body.removeClass('theme-dark').addClass('theme-light');
            localStorage.setItem('ufpel-theme-mode', 'light');
            $(this).find('i').removeClass('fa-sun').addClass('fa-moon');
        } else {
            body.removeClass('theme-light').addClass('theme-dark');
            localStorage.setItem('ufpel-theme-mode', 'dark');
            $(this).find('i').removeClass('fa-moon').addClass('fa-sun');
        }
    });
    
    // Initialize theme mode on load
    $(document).ready(function() {
        const savedMode = localStorage.getItem('ufpel-theme-mode');
        const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
        const shouldUseDark = savedMode === 'dark' || (savedMode === null && prefersDark);
        
        if (shouldUseDark) {
            $('body').addClass('theme-dark');
            $('[data-action="toggle-darkmode"] i').removeClass('fa-moon').addClass('fa-sun');
        }
    });
});
{{/js}}

{{! Footer styles }}
<style>
.ufpel-footer {
    background: linear-gradient(135deg, 
        var(--ufpel-primary), 
        rgba(0, 64, 143, 0.95)) !important;
    position: relative;
}

.ufpel-footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, 
        transparent, 
        rgba(255, 255, 255, 0.3), 
        transparent);
}

.ufpel-footer a {
    transition: all 0.2s ease;
}

.ufpel-footer a:hover {
    color: rgba(255, 255, 255, 0.8) !important;
    transform: translateX(3px);
}

.ufpel-footer__social .btn {
    transition: all 0.3s ease;
    border-color: rgba(255, 255, 255, 0.3);
}

.ufpel-footer__social .btn:hover {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.8);
    transform: translateY(-2px);
}

#back-to-top-btn {
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    background: rgba(0, 64, 143, 0.8) !important;
    border-color: rgba(255, 255, 255, 0.3);
}

#back-to-top-btn:hover {
    background: var(--ufpel-primary) !important;
    border-color: rgba(255, 255, 255, 0.8);
    transform: translateY(-2px);
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .ufpel-footer {
        padding: 3rem 0 2rem !important;
    }
    
    .ufpel-footer__branding {
        text-align: center;
    }
    
    .ufpel-footer__social {
        text-align: center;
    }
    
    .ufpel-footer__bottom {
        text-align: center !important;
    }
    
    #back-to-top-btn {
        bottom: 15px !important;
        right: 15px !important;
        width: 45px !important;
        height: 45px !important;
    }
}

/* High contrast mode */
@media (prefers-contrast: high) {
    .ufpel-footer {
        background: #000000 !important;
        color: #ffffff !important;
    }
    
    .ufpel-footer a {
        color: #ffffff !important;
        text-decoration: underline;
    }
    
    .ufpel-footer__social .btn {
        border-color: #ffffff;
    }
}

/* Reduced motion */
@media (prefers-reduced-motion: reduce) {
    .ufpel-footer a,
    .ufpel-footer__social .btn,
    #back-to-top-btn {
        transition: none !important;
    }
    
    .ufpel-footer a:hover,
    .ufpel-footer__social .btn:hover,
    #back-to-top-btn:hover {
        transform: none !important;
    }
}

/* Print styles */
@media print {
    .ufpel-footer {
        background: white !important;
        color: black !important;
        border-top: 2px solid black;
    }
    
    .ufpel-footer a {
        color: black !important;
    }
    
    .ufpel-footer__social,
    #back-to-top-btn {
        display: none !important;
    }
    
    .ufpel-footer__performance {
        display: none !important;
    }
}

/* Dark mode specific styles */
.theme-dark .ufpel-footer {
    background: linear-gradient(135deg, 
        #0d1117, 
        rgba(13, 17, 23, 0.95)) !important;
}

.theme-dark #back-to-top-btn {
    background: rgba(255, 255, 255, 0.1) !important;
    border-color: rgba(255, 255, 255, 0.3);
}

/* Smooth scrolling for back to top */
html {
    scroll-behavior: smooth;
}

/* Focus styles for accessibility */
.ufpel-footer a:focus,
.ufpel-footer button:focus {
    outline: 2px solid rgba(255, 255, 255, 0.8);
    outline-offset: 2px;
}

/* Loading animation for social media icons */
.ufpel-footer__social .btn i {
    transition: transform 0.2s ease;
}

.ufpel-footer__social .btn:hover i {
    transform: scale(1.1);
}
</style>

